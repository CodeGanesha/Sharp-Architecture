@using Northwind.Domain
@model IList<Customer>

@section MainContentPlaceHolder {

    <h2>Customers</h2>
    <p>All customers from Venezuela:</p>    
    <div>
        <ul>
            @{
                foreach (var customer in this.Model)
                {
                <li>
                    @customer.ContactName
                    has placed
                    @customer.Orders.Count
                    orders. </li>
            
                }}
        </ul>
    </div>

}
